{
  "$schema": "http://json-schema.org/draft-07/schema",
  "definitions": {
    "expression": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "expression"
        },
        "directories": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string"
          }
        },
        "pattern": {
          "type": "string"
        },
        "expression": {
          "type": "string",
          "format": "regex"
        },
        "replacement": {
          "type": "string"
        }
      },
      "required": [
        "directories",
        "pattern",
        "expression",
        "replacement"
      ]
    }
  },
  "type": "object",
  "properties": {
    "current": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
    },
    "strategies": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "$ref": "#/definitions/expression"
          }
        ]
      }
    }
  },
  "required": [
    "current"
  ]
}