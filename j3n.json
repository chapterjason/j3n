{
  "$schema": "./resources/schema/all.json",
  "version": "0.1.0",
  "actions": {
    "build": {
      "steps": {
        "go": {
          "type": "exec",
          "output": true,
          "params": {
            "command": "go",
            "args": [
              "build",
              "-o",
              "./dist/j3n"
            ],
            "ignore_exit_codes": [
              2
            ],
            "print_stderr": true,
            "print_stdout": true
          }
        }
      }
    }
  },
  "release": {
    "workflow": {
      "type": "multi_branch"
    }
  }
}