{
  "$schema": "./resources/schema/all.json",
  "actions": {
    "build": {
      "steps": {
        "go": {
          "output": true,
          "params": {
            "args": [
              "build",
              "-o",
              "./dist/j3n"
            ],
            "command": "go",
            "ignore_exit_codes": [
              2
            ],
            "print_stderr": true,
            "print_stdout": true
          },
          "type": "exec"
        }
      }
    }
  },
  "release": {
    "workflow": {
      "type": "multi_branch"
    }
  },
  "version": {
    "current": "0.1.0-DEV",
    "strategies": [
      {
        "directories": [
          "./cmd"
        ],
        "expression": "j3n\\/\\d+\\.\\d+\\/resources",
        "pattern": "init.go",
        "replacement": "j3n/{{VERSION_MAJOR}}.{{VERSION_MINOR}}/resources",
        "type": "expression"
      }
    ]
  }
}